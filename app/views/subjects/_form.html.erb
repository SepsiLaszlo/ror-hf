<%= javascript_pack_tag 'subject' %>
<%= form_with(model: subject) do |form| %>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <%= form.label :name, class: 'input-group-text' %>
    </div>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <%= form.label :credit, class: 'input-group-text' %>
    </div>
    <%= form.number_field :credit, class: 'form-control' %>
  </div>

  <h4>Kurzusok</h4>

  <div class="row">
    <div class="input-group mb-3 col">
      <div class="input-group-prepend">
        <%= form.label 'Kurzus tipus', class: 'input-group-text' %>
      </div>
      <%= form.hidden_field :courses, id:'new-course-type-ids', value: '' %>
      <%= select_tag :new_course,options_from_collection_for_select(CourseType.all,'id','name'), class: 'form-select', id: 'new-course-input' %>
    </div>
    <div class="col-2">
      <button type="button" class="btn btn-secondary" id="new-course-button">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
          <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"></path>
          <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"></path>
        </svg>
      </button>
    </div>
  </div>

  <table class="table">
  <thead>
    <tr>
      <th scope="col">Tipus</th>
<!--      <th scope="col">Lehetőségek</th>-->
    </tr>
  </thead>
  <tbody id="new-course-table-body">
    <tr>
    </tr>
  </tbody>
</table>

  <div class="actions">
    <%= form.submit "Létrehoz", class: 'btn btn-primary', style:'float:right' %>
  </div>

<% end %>
